{
  "name": "emo",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs"
  ],
  "commands": {
    "emotion": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+E"
      },
      "description": "Emotionalize"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "https://*/*"
      ],
      "js": [
        "main.js"
      ]
    }
  ],
  "icons": {
    "16": "favicon/favicon16.png",
    "32": "favicon/favicon32.png",
    "48": "favicon/favicon48.png",
    "128": "favicon/favicon128.png"
  }
}
